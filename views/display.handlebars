<html lang="en">
<head>
	<meta charset="utf-8"/>
	<title>Payment Tracker</title>
  
	<!-- Imported Scripts -->
	<script crossorigin src="https://unpkg.com/react@15/dist/react.min.js"></script>
	<script crossorigin src="https://unpkg.com/react-dom@15/dist/react-dom.min.js"></script>
	<script crossorigin src="https://unpkg.com/prop-types/prop-types.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.6.2/remarkable.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
	
	<!-- Custom Scripts -->
	<script src="/assets/displayBundle.js"></script>

	<!-- Favicon -->
	<link rel="shortcut icon" href="/assets/img/favicon.png" />
	
	<!-- Bootstrap -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	
	<!-- Bootstrap Date-Picker Plugin -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"/>

	<!-- Custom CSS -->
	<link rel="stylesheet" type="text/css" href="/assets/style.css" />
</head>
<body> 
	<header>
		<a id="logo" href="/display">Tracker</a>
		<a id="premium" class="nav" href="/premium">Premium</a>
		<a class="nav" href="/logout">Logout</a>
		<a class="nav" href="/account">Account</a>
		<a class="nav" href="/create">Create</a>
		<a class="nav" href="/display">Display</a>
	</header>
	
	<p id="message"></p>
	
	<div id="results-container">
		<form id="search" name="search" action="/search" method="GET">
			<input id="search-bar" class="input-button" type="text" name="name" placeholder="Find a payment (Leave blank to return all)" />
			<input id="csrfToken" type="hidden" name="_csrf" value={{csrfToken}} />
			<input id="search-button" class="submit input-button" type="submit" value="Search" />
		</form>
		
		<div id="filter">
			<h3>Filter by</h3>
		
			<form id="filter-form">
				<h4 class="filter-header highlight">Date</h4>
				<input class="filter-input multi-filter" type="checkbox" name="date" value="overdue" />
				<label class="filter-label">Overdue</label>
				<input class="filter-input multi-filter" type="checkbox" name="date" value="today" />
				<label class="filter-label">Today</label>
				<input class="filter-input multi-filter" type="checkbox" name="date" value="tomorrow" />
				<label class="filter-label">Tomorrow</label>
				<input class="filter-input multi-filter" type="checkbox" name="date" value="later" />
				<label class="filter-label">Later</label>
				
				<h4 class="filter-header highlight">Cost</h4>
				<input class="filter-input single-filter" type="checkbox" name="cost" value="lowest" />
				<label class="filter-label">Lowest Cost</label>
				<input class="filter-input single-filter" type="checkbox" name="cost" value="highest" />
				<label class="filter-label">Highest Cost</label>
				
				<h4 class="filter-header highlight">Alphabetical</h4>
				<input class="filter-input single-filter" type="checkbox" name="word" value="a-z" />
				<label class="filter-label">A to Z</label>
				<input class="filter-input single-filter" type="checkbox" name="word" value="z-a" />
				<label class="filter-label">Z to A</label>
				
				<input type="hidden" name="_csrf" value={{csrfToken}} />
			</form>
		</div>
		
		<div id="results-content">
			
		</div>	
	</div>
</body>
</html>